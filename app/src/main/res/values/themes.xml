<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern Dark Theme -->
    <style name="Theme.IntervalBell" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Accent/Secondary colors -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_primary</item>
        
        <!-- Material Button Styles -->
        <item name="materialButtonStyle">@style/Widget.IntervalBell.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.IntervalBell.Button.Outlined</item>
        
        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/glow_primary</item>
    </style>
    
    <!-- Custom Button Style -->
    <style name="Widget.IntervalBell.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_primary_gradient</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="elevation">4dp</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="Widget.IntervalBell.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="backgroundTint">@color/button_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/glow_primary</item>
    </style>
    
    <!-- Keypad Button Style -->
    <style name="Widget.IntervalBell.KeypadButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/keypad_button_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/keypad_button_background</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/glow_accent</item>
        <item name="elevation">2dp</item>
    </style>
    
    <!-- Accent Button Style -->
    <style name="Widget.IntervalBell.Button.Accent" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/background_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_accent_gradient</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">4dp</item>
    </style>
    
    <!-- Base Text Style -->
    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Timer Display Text Style -->
    <style name="TextStyle.Timer">
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    
    <!-- Time Label Style -->
    <style name="TextStyle.TimeLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/time_label</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Section Title Style -->
    <style name="TextStyle.SectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    
    <!-- App Title Style -->
    <style name="TextStyle.AppTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <!-- Spinner Style -->
    <style name="Widget.IntervalBell.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/spinner_dropdown_background</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
    </style>
</resources>
