<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Night theme inherits from base theme (already dark) -->
    <style name="Theme.IntervalBell" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Accent/Secondary colors -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_primary</item>
        
        <!-- Material Button Styles -->
        <item name="materialButtonStyle">@style/Widget.IntervalBell.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.IntervalBell.Button.Outlined</item>
        
        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/glow_primary</item>
    </style>
</resources>
